{
	"compilerOptions": {
		"target": "ES5",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"lib": ["ES2020"],
		"skipLibCheck": true,

		/* Bundler mode */
		"moduleResolution": "bundler",
		"isolatedModules": true,
		"moduleDetection": "force",
		"noEmit": true,

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,

		"outDir": "dist"
	},
	"include": ["src", "test"]
}
